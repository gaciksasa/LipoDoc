@model DeviceDataCollector.Models.DeviceConfigurationViewModel

@{
    ViewData["Title"] = "Configure Device";
    var device = ViewBag.DeviceInfo as DeviceDataCollector.Models.Device;
    var ipAddress = ViewBag.IPAddress;
    var port = ViewBag.Port;
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Devices" asp-action="Index">Devices</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id">@device.SerialNumber</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Configure</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Device Configuration Options</h5>
        </div>
        <div class="card-body">
            <p>Select a configuration action to perform on the device <strong>@device.Name (@device.SerialNumber)</strong>:</p>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Get Current Configuration</h5>
                            <p class="card-text">Retrieve and view the current device configuration settings.</p>
                            <form asp-action="RequestConfiguration" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="deviceId" value="@device.Id" />
                                <input type="hidden" name="ipAddress" value="@ipAddress" />
                                <input type="hidden" name="port" value="@port" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-download"></i> Get Configuration
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Synchronize Time</h5>
                            <p class="card-text">Set the device's date and time to match the server.</p>
                            <form asp-action="SyncTime" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="deviceId" value="@device.Id" />
                                <input type="hidden" name="serialNumber" value="@device.SerialNumber" />
                                <input type="hidden" name="ipAddress" value="@ipAddress" />
                                <input type="hidden" name="port" value="@port" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-clock"></i> Sync Time
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Change Serial Number</h5>
                            <p class="card-text">Update the device's serial number.</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#serialNumberModal">
                                <i class="bi bi-upc"></i> Change Serial Number
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Diagnostic Check</h5>
                            <p class="card-text">Test connectivity to the device and view its current status.</p>
                            <form asp-action="DiagnosticCheck" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="deviceId" value="@device.Id" />
                                <input type="hidden" name="ipAddress" value="@ipAddress" />
                                <input type="hidden" name="port" value="@port" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-activity"></i> Run Diagnostic
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Device Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Serial Number:</dt>
                        <dd class="col-sm-8">@device.SerialNumber</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@device.Name</dd>

                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(device.Location) ? "-" : device.Location)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Connection:</dt>
                        <dd class="col-sm-8">@ipAddress:@port</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (device.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Last Connection:</dt>
                        <dd class="col-sm-8">
                            @if (device.LastConnectionTime.HasValue)
                            {
                                @device.LastConnectionTime.Value.ToString("dd.MM.yyyy HH:mm:ss")
                            }
                            else
                            {
                                <span>Never</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["DiagnosticResults"] != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Diagnostic Results</h5>
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 rounded">@TempData["DiagnosticResults"]</pre>

                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Note:</strong> If direct connection fails but the device is sending status messages, you may need to send configuration requests when the device connects to the server instead of trying to establish a separate connection.
                </div>
            </div>
        </div>
    }

    <div class="mb-3">
        <a asp-controller="Devices" asp-action="Details" asp-route-id="@device.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Device Details
        </a>
    </div>
</div>

<!-- Modal for changing serial number -->
<div class="modal fade" id="serialNumberModal" tabindex="-1" aria-labelledby="serialNumberModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ChangeSerialNumber" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="deviceId" value="@device.Id" />
                <input type="hidden" name="oldSerialNumber" value="@device.SerialNumber" />
                <input type="hidden" name="ipAddress" value="@ipAddress" />
                <input type="hidden" name="port" value="@port" />

                <div class="modal-header">
                    <h5 class="modal-title" id="serialNumberModalLabel">Change Device Serial Number</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Changing a device's serial number might affect its operation. Make sure you know what you're doing.
                    </div>

                    <div class="mb-3">
                        <label for="currentSN" class="form-label">Current Serial Number</label>
                        <input type="text" class="form-control" id="currentSN" value="@device.SerialNumber" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="newSerialNumber" class="form-label">New Serial Number</label>
                        <input type="text" class="form-control" id="newSerialNumber" name="newSerialNumber" required />
                        <div class="form-text">Enter the new serial number for the device.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Change Serial Number</button>
                </div>
            </form>
        </div>
    </div>
</div>