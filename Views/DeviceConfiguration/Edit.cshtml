@model DeviceDataCollector.Models.DeviceConfigurationViewModel

@{
    ViewData["Title"] = "Edit Device Configuration";
}

<div class="container">
    <h1 class="mb-4">Device Configuration</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="DeviceId" />
        <input type="hidden" name="ipAddress" value="@TempData["IPAddress"]" />
        <input type="hidden" name="port" value="@TempData["Port"]" />

        <div class="row">
            <div class="col-md-6">
                <!-- Device Information -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Device Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Serial Number</label>
                            <input type="text" class="form-control" value="@Model.DeviceId" readonly />
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Software Version</label>
                                    <input type="text" class="form-control" asp-for="SoftwareVersion" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Hardware Version</label>
                                    <input type="text" class="form-control" asp-for="HardwareVersion" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Network Settings -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Network Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ServerAddress" class="form-label">Server Address</label>
                            <input type="text" class="form-control" asp-for="ServerAddress" />
                            <span asp-validation-for="ServerAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeviceIPAddress" class="form-label">Device IP Address</label>
                            <input type="text" class="form-control" asp-for="DeviceIPAddress" />
                            <span asp-validation-for="DeviceIPAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SubnetMask" class="form-label">Subnet Mask</label>
                            <input type="text" class="form-control" asp-for="SubnetMask" />
                            <span asp-validation-for="SubnetMask" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RemotePort" class="form-label">Remote Port</label>
                                    <input type="number" class="form-control" asp-for="RemotePort" min="1" max="65535" />
                                    <span asp-validation-for="RemotePort" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LocalPort" class="form-label">Local Port</label>
                                    <input type="number" class="form-control" asp-for="LocalPort" min="1" max="65535" />
                                    <span asp-validation-for="LocalPort" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lipemic Threshold Settings -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Lipemic Threshold Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> These values define the thresholds for lipemic categories.
                        </div>

                        <div class="mb-3">
                            <label asp-for="LipemicIndex1" class="form-label">Group I Threshold</label>
                            <input type="number" class="form-control" asp-for="LipemicIndex1" min="0" max="10000" />
                            <div class="form-text">Values below this threshold are classified as Group I.</div>
                            <span asp-validation-for="LipemicIndex1" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LipemicIndex2" class="form-label">Group II Threshold</label>
                            <input type="number" class="form-control" asp-for="LipemicIndex2" min="0" max="10000" />
                            <div class="form-text">Values between Group I and this threshold are classified as Group II.</div>
                            <span asp-validation-for="LipemicIndex2" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LipemicIndex3" class="form-label">Group III Threshold</label>
                            <input type="number" class="form-control" asp-for="LipemicIndex3" min="0" max="10000" />
                            <div class="form-text">Values between Group II and this threshold are classified as Group III. Values above are Group IV.</div>
                            <span asp-validation-for="LipemicIndex3" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Function Settings -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Function Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="TransferModeEnabled" id="transferMode">
                            <label class="form-check-label" for="transferMode">
                                Enable Data Transfer Mode
                            </label>
                            <div class="form-text">When enabled, the device will send data to the server automatically.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="BarcodesModeEnabled" id="barcodeMode">
                            <label class="form-check-label" for="barcodeMode">
                                Enable Barcode Mode
                            </label>
                            <div class="form-text">When enabled, the device will require barcode scanning.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="OperatorIdEnabled" id="operatorId">
                            <label class="form-check-label" for="operatorId">
                                Enable Operator ID
                            </label>
                            <div class="form-text">When enabled, operator ID barcode will be required.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="LotNumberEnabled" id="lotNumber">
                            <label class="form-check-label" for="lotNumber">
                                Enable LOT Number
                            </label>
                            <div class="form-text">When enabled, LOT number barcode will be required.</div>
                        </div>
                    </div>
                </div>

                <!-- WiFi Settings -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">WiFi Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="NetworkName" class="form-label">Network Name (SSID)</label>
                            <input type="text" class="form-control" asp-for="NetworkName" />
                            <span asp-validation-for="NetworkName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WifiMode" class="form-label">WiFi Mode</label>
                            <input type="text" class="form-control" asp-for="WifiMode" />
                            <span asp-validation-for="WifiMode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SecurityType" class="form-label">Security Type</label>
                            <input type="text" class="form-control" asp-for="SecurityType" />
                            <span asp-validation-for="SecurityType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WifiPassword" class="form-label">WiFi Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" asp-for="WifiPassword" id="wifiPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="WifiPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tube Profiles -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Tube Profiles</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Configure tube profiles for different manufacturers.
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Profile Name</th>
                                <th>REF Code</th>
                                <th>Offset Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Profiles.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="Profiles[i].Name" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="Profiles[i].RefCode" />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control" asp-for="Profiles[i].OffsetValue" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Barcode Configurations -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Barcode Configurations</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Configure barcode parameters for different barcode types.
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Minimum Length</th>
                                <th>Maximum Length</th>
                                <th>Start Code</th>
                                <th>Stop Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.BarcodeConfigurations.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <input type="number" class="form-control" asp-for="BarcodeConfigurations[i].MinLength" min="0" max="100" />
                                    </td>
                                    <td>
                                        <input type="number" class="form-control" asp-for="BarcodeConfigurations[i].MaxLength" min="0" max="100" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="BarcodeConfigurations[i].StartCode" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="BarcodeConfigurations[i].StopCode" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mb-4">
            <a asp-controller="Devices" asp-action="Details" asp-route-id="@TempData["DeviceId"]" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Device Details
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Configuration
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordField = document.getElementById('wifiPassword');
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);

            const icon = this.querySelector('i');
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        });
    </script>
}