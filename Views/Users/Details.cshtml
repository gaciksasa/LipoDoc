@model DeviceDataCollector.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">User Details</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Username</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Username
                            @if (User.Identity.Name == Model.Username)
                            {
                                <span class="badge bg-info ms-2">You</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Role</strong>
                        </div>
                        <div class="col-md-8">
                            @if (Model.Role == "Admin")
                            {
                                <span class="badge bg-primary">Administrator</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Regular User</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Full Name</strong>
                        </div>
                        <div class="col-md-8">
                            @(string.IsNullOrEmpty(Model.FullName) ? "-" : Model.FullName)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Email</strong>
                        </div>
                        <div class="col-md-8">
                            @(string.IsNullOrEmpty(Model.Email) ? "-" : Model.Email)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Created</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 text-muted">
                            <strong>Last Login</strong>
                        </div>
                        <div class="col-md-8">
                            @(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("yyyy-MM-dd HH:mm:ss") : "Never")
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>